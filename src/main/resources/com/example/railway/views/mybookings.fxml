<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.railway.controller.MyBookingsController"  alignment="TOP_CENTER" styleClass="center-pane">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label styleClass="section-title" text="My Bookings">
        <font>
            <Font size="24.0"/>
        </font>
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </Label>
    <ScrollPane fitToWidth="true" styleClass="result-scroll">
        <VBox fx:id="bookingsContainer" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </VBox>

    </ScrollPane>
</VBox>